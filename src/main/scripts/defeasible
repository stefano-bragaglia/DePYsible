#!/usr/bin/env python
import argparse
import logging

import colorama
import coloredlogs
import verboselogs

from defeasible import main

colorama.init()
verboselogs.install()
coloredlogs.install()

_logger = logging.getLogger('defeasible')

if __name__ == '__main__':
    parser = argparse.ArgumentParser(prog='defeasible', add_help=True, allow_abbrev=True)
    parser.add_argument('-b', '--blind', help='ignore colours to render output', action='store_true', default=False)
    namespace = parser.parse_args()
    main(blind=namespace.blind)
    _logger.verbose('Done.')
